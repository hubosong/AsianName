<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#dd1718"
                android:endColor="#880a0a"
                android:angle="270" />

            <corners
                android:radius="50dp" />

            <stroke
                android:width="2dp"
                android:color="#f9f726" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@android:color/transparent"/>

            <corners
                android:radius="50dp" />

            <stroke
                android:width="2dp"
                android:color="#f9f726" />
        </shape>
    </item>

</selector>
